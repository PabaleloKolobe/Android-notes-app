<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_recyclerView_id"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/tvtitle_recyclerview_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvtitle_recyclerview_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Journal title"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_recyclerView_id"
        app:layout_constraintTop_toTopOf="@id/image_recyclerView_id"/>
    <TextView
        android:id="@+id/tvjournal_recyclerView_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Journal Content"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/tvtitle_recyclerview_id"
        app:layout_constraintStart_toStartOf="@id/tvtitle_recyclerview_id"
        app:layout_constraintTop_toBottomOf="@id/tvtitle_recyclerview_id"/>



</androidx.constraintlayout.widget.ConstraintLayout>